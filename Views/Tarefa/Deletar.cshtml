@model TrilhaApiDesafio.Models.Tarefa

@{
    ViewData["Title"] = "Deletar tarefa";
}

<h1 style="color:red;"> Deseja realmente deletar essa tarefa? </h1>

<div>
    <dl class="row">
        <dt class="col-sm-1">
            @Html.DisplayNameFor(x => x.Titulo):
        </dt>
        <dt class="col-sm-3">
            @Html.DisplayFor(x => x.Titulo)
        </dt>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(x => x.Descricao):
        </dt>
        <dt class="col-sm-3">
            @Html.DisplayFor(x => x.Descricao)
        </dt>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(x => x.Data):
        </dt>
        <dt class="col-sm-3">
            @Html.DisplayFor(x => x.Data)
        </dt>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(x => x.Status):
        </dt>
        <dt class="col-sm-3">
            @Html.DisplayFor(x => x.Status)
        </dt>
    </dl>
</div>

<form asp-action="Deletar">
    <input type="submit" value="Deletar" class="btn btn-danger">
</form>

<br>

<a asp-action="Index"> Voltar </a>