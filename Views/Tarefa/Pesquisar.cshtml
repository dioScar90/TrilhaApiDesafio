@model TrilhaApiDesafio.Models.Tarefa

@{
    ViewData["Title"] = "Pesquisar tarefa";
}

<h1> Pesquisar tarefa </h1>

<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ResultadoDaPesquisa">
            <div class="form-group">
                <label class="control-label">Pesquisar por:</label>
                <select class=form-control id="status_search" name="Id">
                    <option value="0" style="display:none;">-- Escolha uma opção --</option>
                    <option value="1">Titulo</option>
                    <option value="2">Data</option>
                    <option value="3">Status</option>
                </select>
            </div>

            <div>
                <div class="form-group" id="por_titulo" style="display:none;">
                    <label class="control-label"></label>
                    <input type="text" name="Titulo" id="titulo_tarefa" class="form-control">
                </div>

                <input type="hidden" name="Descricao" value="">

                <div class="form-group" id="por_data" style="display:none;">
                    <label class="control-label">Coloque uma data:</label>
                    <input type="datetime-local" name="Data" id="data_tarefa" class="form-control">
                </div>

                <div class="form-group" id="por_status" style="display:none;">
                    <label class="control-label"></label>
                    <select name="Status" id="status_tarefa" class=form-control>
                        <option value="0" style="display:none;">-- Escolha o status --</option>
                        <option value="Pendente">Pendente</option>
                        <option value="Finalizado">Finalizado</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Pesquisar" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<hr>

<div>
    <a asp-action="Index"> Voltar </a>
</div>