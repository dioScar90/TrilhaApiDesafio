@model TrilhaApiDesafio.Models.Tarefa

@{
    ViewData["Title"] = "Pesquisar tarefa";
}

<h1> Pesquisar tarefa </h1>

<hr>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Pesquisar">
            <div class="form-group">
                <label class="control-label">Pesquisar por:</label>
                <select class=form-control id="status_search">
                    <option value="0" style="display:none;">-- Escolha uma opção --</option>
                    <option value="1">Id</option>
                    <option value="2">Titulo</option>
                    <option value="3">Desrição</option>
                    <option value="4">Data</option>
                    <option value="5">Status</option>
                </select>
            </div>
            <div>
            <div class="form-group" id="por_id" style="display:none;">
                <label class="control-label"></label>
                <input type="number" name="id_tarefa" id="id_tarefa" placeholder="Informe o número do Id" min="0" step="1" class="form-control">
            </div>
            <div class="form-group" id="por_titulo_descricao" style="display:none;">
                <label class="control-label"></label>
                <input type="text" name="tit_desc_tarefa" id="tit_desc_tarefa" class="form-control">
            </div>
            <div class="form-group" id="por_data" style="display:none;">
                <label class="control-label">Coloque uma data:</label>
                <input type="date" name="data_tarefa" id="data_tarefa" class="form-control">
            </div>
            <div class="form-group" id="por_status" style="display:none;">
                <label class="control-label"></label>
                <select name="status_tarefa" id="status_tarefa" class=form-control>
                    <option value="0" style="display:none;">-- Escolha o status --</option>
                    <option value="Pendente">Pendente</option>
                    <option value="Finalizado">Finalizado</option>
                </select>
            </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Pesquisar" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<hr>

<div>
    <a asp-action="Index"> Voltar </a>
</div>